---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const projects = await getCollection('projects', ({ data }) => data.draft !== true);
  return projects.map((project) => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

const { project } = Astro.props;
const { Content } = await project.render();
---

<BaseLayout title={project.data.title}>
  <section class="project-hero">
    <div class="container">
      <div class="project-hero-content">
        <a class="back-link" href="/projects">Back to Projects</a>
        <span class="project-category">{project.data.category}</span>
        <h1 class="project-title">{project.data.title}</h1>
        <p class="project-subtitle">{project.data.excerpt}</p>
        <div class="project-meta">
          <span class="meta-item">{project.data.location}</span>
          <span class="meta-item">{project.data.capacity} Capacity</span>
          <span class="meta-item">{project.data.status}</span>
        </div>
      </div>
      <div class="project-hero-image">
        <img
          src={project.data.image || '/images/project-placeholder.jpg'}
          alt={project.data.imageAlt || project.data.title}
          loading="lazy"
        />
      </div>
    </div>
  </section>

  <section class="section project-details">
    <div class="container project-layout">
      <div class="project-content">
        <Content />
      </div>
      <aside class="project-sidebar">
        <div class="card sidebar-card">
          <div class="card-body">
            <h2 class="sidebar-title">Project Highlights</h2>
            <ul class="sidebar-list">
              <li>
                <span class="label">Location</span>
                <span class="value">{project.data.location}</span>
              </li>
              <li>
                <span class="label">Capacity</span>
                <span class="value">{project.data.capacity}</span>
              </li>
              <li>
                <span class="label">Status</span>
                <span class="value">{project.data.status}</span>
              </li>
              {project.data.commissionDate && (
                <li>
                  <span class="label">Commissioned</span>
                  <span class="value">
                    {new Date(project.data.commissionDate).toLocaleDateString('en-US', {
                      year: 'numeric',
                      month: 'long',
                    })}
                  </span>
                </li>
              )}
            </ul>
          </div>
        </div>
        {project.data.stats && project.data.stats.length > 0 && (
          <div class="card sidebar-card">
            <div class="card-body">
              <h2 class="sidebar-title">Key Statistics</h2>
              <div class="stats-grid">
                {project.data.stats.map((stat) => (
                  <div class="stat-item">
                    <span class="stat-value">{stat.value}</span>
                    <span class="stat-label">{stat.label}</span>
                  </div>
                ))}
              </div>
            </div>
          </div>
        )}
      </aside>
    </div>
  </section>
</BaseLayout>

<style>
  .project-hero {
    background: linear-gradient(135deg, var(--color-primary-900) 0%, var(--color-primary-700) 100%);
    color: var(--color-text-inverse);
    padding-block: var(--space-20);
  }

  .project-hero .container {
    display: grid;
    gap: var(--space-8);
  }

  @media (min-width: 1024px) {
    .project-hero .container {
      grid-template-columns: 1.1fr 0.9fr;
      align-items: center;
    }
  }

  .project-hero-content {
    max-width: var(--container-2xl);
  }

  .back-link {
    display: inline-flex;
    font-size: var(--font-size-sm);
    color: var(--color-primary-100);
    text-decoration: none;
    margin-bottom: var(--space-4);
  }

  .back-link:hover {
    color: var(--color-text-inverse);
  }

  .project-category {
    display: inline-block;
    padding: var(--space-1) var(--space-3);
    border-radius: var(--radius-full);
    background-color: rgba(255, 255, 255, 0.12);
    text-transform: uppercase;
    letter-spacing: var(--letter-spacing-wide);
    font-size: var(--font-size-xs);
    font-weight: var(--font-weight-medium);
    margin-bottom: var(--space-4);
  }

  .project-title {
    font-size: var(--font-size-4xl);
    line-height: var(--line-height-tight);
    margin-bottom: var(--space-4);
  }

  @media (min-width: 768px) {
    .project-title {
      font-size: var(--font-size-5xl);
    }
  }

  .project-subtitle {
    color: var(--color-primary-100);
    font-size: var(--font-size-lg);
    line-height: var(--line-height-relaxed);
    margin-bottom: var(--space-6);
  }

  .project-meta {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-3);
  }

  .meta-item {
    padding: var(--space-1) var(--space-3);
    border-radius: var(--radius-full);
    background-color: rgba(255, 255, 255, 0.12);
    font-size: var(--font-size-xs);
    text-transform: uppercase;
    letter-spacing: var(--letter-spacing-wide);
  }

  .project-hero-image {
    border-radius: var(--radius-xl);
    overflow: hidden;
    box-shadow: var(--shadow-lg);
  }

  .project-hero-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .project-layout {
    display: grid;
    gap: var(--space-8);
  }

  @media (min-width: 1024px) {
    .project-layout {
      grid-template-columns: 2fr 1fr;
      align-items: start;
    }
  }

  .project-content :global(h2) {
    margin-top: var(--space-8);
  }

  .project-content :global(p) {
    color: var(--color-text-secondary);
  }

  .sidebar-card + .sidebar-card {
    margin-top: var(--space-6);
  }

  .sidebar-title {
    font-size: var(--font-size-lg);
    margin-bottom: var(--space-4);
  }

  .sidebar-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    gap: var(--space-3);
  }

  .sidebar-list li {
    display: flex;
    justify-content: space-between;
    gap: var(--space-4);
  }

  .sidebar-list .label {
    font-size: var(--font-size-xs);
    text-transform: uppercase;
    letter-spacing: var(--letter-spacing-wide);
    color: var(--color-text-muted);
  }

  .sidebar-list .value {
    font-weight: var(--font-weight-medium);
    color: var(--color-text-primary);
  }

  .stats-grid {
    display: grid;
    gap: var(--space-4);
  }

  .stat-item {
    padding: var(--space-3);
    border-radius: var(--radius-lg);
    background: var(--color-surface);
    border: 1px solid var(--color-border);
  }

  .stat-value {
    display: block;
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-semibold);
  }

  .stat-label {
    display: block;
    font-size: var(--font-size-xs);
    color: var(--color-text-secondary);
    text-transform: uppercase;
    letter-spacing: var(--letter-spacing-wide);
  }
</style>
