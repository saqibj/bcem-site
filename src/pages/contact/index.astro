---
import BaseLayout from '@/layouts/BaseLayout.astro';
---

<BaseLayout title="Contact Us">
  <section class="page-hero">
    <div class="container">
      <div class="page-hero-content">
        <p class="page-eyebrow">Contact Us</p>
        <h1 class="page-title">Your Gateway to Clean Energy Solutions</h1>
        <p class="page-subtitle">Our representative will reach out to you.</p>
      </div>
    </div>
  </section>

  <section class="section contact-highlights">
    <div class="container">
      <div class="contact-highlights-grid">
        <article class="card">
          <div class="card-body">
            <p class="contact-tag">Have a Project?</p>
            <p class="contact-link">enquiry@burjmodaraba.com</p>
          </div>
        </article>
        <article class="card">
          <div class="card-body">
            <p class="contact-tag">Want to Work With Us?</p>
            <p class="contact-link">Send Brief</p>
          </div>
        </article>
        <article class="card">
          <div class="card-body">
            <p class="contact-tag">See What We Do!</p>
            <p class="contact-link">Our Services</p>
          </div>
        </article>
      </div>
    </div>
  </section>

  <section class="section contact-details bg-alt">
    <div class="container">
      <div class="contact-details-grid">
        <article class="card">
          <div class="card-body">
            <h2 class="card-title">Get in Touch</h2>
            <p class="card-text">
              Produce your own clean energy with Burj Clean Energy Modaraba.
            </p>
            <dl class="contact-list">
              <div>
                <dt>Phone</dt>
                <dd>
                  <a href="tel:+922135246400">+92 21 3524 6400</a>
                </dd>
              </div>
              <div>
                <dt>Email</dt>
                <dd>
                  <a href="mailto:enquiry@burjmodaraba.com">enquiry@burjmodaraba.com</a>
                </dd>
              </div>
            </dl>
          </div>
        </article>

        <article class="card">
          <div class="card-body">
            <h2 class="card-title">Send us a message</h2>
            <p class="card-text">
              Tell us about your project or inquiry and we will respond promptly.
            </p>
            <form class="contact-form" method="post">
              <label class="form-label" for="contact-name">Name</label>
              <input
                class="form-input"
                id="contact-name"
                name="name"
                type="text"
                autocomplete="name"
                required
              />

              <label class="form-label" for="contact-email">Email</label>
              <input
                class="form-input"
                id="contact-email"
                name="email"
                type="email"
                autocomplete="email"
                required
              />

              <label class="form-label" for="contact-phone">Phone</label>
              <input
                class="form-input"
                id="contact-phone"
                name="phone"
                type="tel"
                autocomplete="tel"
              />

              <label class="form-label" for="contact-message">Message</label>
              <textarea
                class="form-textarea"
                id="contact-message"
                name="message"
                rows="4"
                required
              ></textarea>

              <button class="btn btn-primary" type="submit">Send message</button>
            </form>
          </div>
        </article>

        <article class="card">
          <div class="card-body">
            <h2 class="card-title">Find Us</h2>
            <p class="card-text">
              Power your home and business with Burj Clean Energy Modaraba.
            </p>
            <address class="contact-address">
              Burj Clean Energy Modaraba
              <br />
            Office # 202, 1st Floor,
            <br />
            11-C, Al-Murtaza Commercial Lane 2,
            <br />
            DHA Phase VIII , Karachi
            </address>
          </div>
        </article>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .contact-highlights-grid {
    display: grid;
    gap: var(--space-6);
  }

  .contact-details-grid {
    display: grid;
    gap: var(--space-6);
  }

  @media (min-width: 768px) {
    .contact-highlights-grid {
      grid-template-columns: repeat(3, 1fr);
    }

    .contact-details-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .contact-details-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .contact-tag {
    text-transform: uppercase;
    letter-spacing: var(--letter-spacing-wide);
    font-size: var(--font-size-xs);
    color: var(--color-text-muted);
    margin: 0 0 var(--space-2);
  }

  .contact-link {
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-semibold);
    color: var(--color-primary-700);
    margin: 0;
  }

  .contact-list {
    margin: var(--space-5) 0 0;
    display: grid;
    gap: var(--space-4);
    color: var(--color-text-secondary);
  }

  .contact-list dt {
    font-weight: var(--font-weight-semibold);
    color: var(--color-text);
    margin-bottom: var(--space-1);
  }

  .contact-list a {
    color: var(--color-primary-700);
    text-decoration: none;
  }

  .contact-list a:hover {
    text-decoration: underline;
  }

  .contact-address {
    margin-top: var(--space-5);
    font-style: normal;
    color: var(--color-text-secondary);
    line-height: var(--line-height-relaxed);
  }

  .contact-form {
    margin-top: var(--space-5);
    display: grid;
    gap: var(--space-4);
  }

  .form-label {
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-semibold);
    color: var(--color-text);
  }

  .form-input,
  .form-textarea {
    width: 100%;
    border-radius: var(--radius-md);
    border: 1px solid var(--color-border);
    padding: var(--space-3);
    font-size: var(--font-size-sm);
    color: var(--color-text);
    background: #f3f4f6;
  }

  .form-input:focus,
  .form-textarea:focus {
    outline: 2px solid transparent;
    box-shadow: 0 0 0 2px var(--color-primary-600);
    border-color: var(--color-primary-600);
  }
</style>
