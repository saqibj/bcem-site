---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const news = await getCollection('news', ({ data }) => data.draft !== true);
const sortedNews = news.sort(
  (a, b) => new Date(b.data.publishDate).valueOf() - new Date(a.data.publishDate).valueOf()
);
---

<BaseLayout title="News">
  <section class="page-hero">
    <div class="container">
      <div class="page-hero-content">
        <p class="page-eyebrow">Updates</p>
        <h1 class="page-title">News</h1>
        <p class="page-subtitle">
          The latest announcements, media coverage, and LinkedIn updates from BCEM.
        </p>
      </div>
    </div>
  </section>

  <section class="section news-list">
    <div class="container">
      <div class="news-grid">
        {sortedNews.length > 0 ? (
          sortedNews.map((article) => (
            <article class="news-card card">
              {article.data.image && (
                <div class="news-image">
                  <img
                    src={article.data.image}
                    alt={article.data.imageAlt || article.data.title}
                    loading="lazy"
                  />
                </div>
              )}
              <div class="card-body">
                <span class="news-category">{article.data.category}</span>
                <h2 class="card-title">
                  <a href={`/news/${article.slug}`}>{article.data.title}</a>
                </h2>
                <p class="card-text">{article.data.excerpt}</p>
                <div class="news-meta">
                  <time datetime={article.data.publishDate.toISOString()}>
                    {article.data.publishDate.toLocaleDateString('en-US', {
                      year: 'numeric',
                      month: 'long',
                      day: 'numeric',
                    })}
                  </time>
                  {article.data.sourceUrl && (
                    <a class="news-source" href={article.data.sourceUrl} target="_blank" rel="noreferrer noopener">
                      Source
                    </a>
                  )}
                </div>
              </div>
            </article>
          ))
        ) : (
          <p class="text-center text-secondary">News coming soon.</p>
        )}
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .page-hero {
    background: linear-gradient(135deg, var(--color-primary-900) 0%, var(--color-primary-700) 100%);
    color: var(--color-text-inverse);
    padding-block: var(--space-20);
  }

  .page-hero-content {
    max-width: var(--container-3xl);
  }

  .page-eyebrow {
    text-transform: uppercase;
    letter-spacing: var(--letter-spacing-wide);
    font-size: var(--font-size-xs);
    color: var(--color-primary-200);
    margin-bottom: var(--space-3);
  }

  .page-title {
    font-size: var(--font-size-4xl);
    line-height: var(--line-height-tight);
    margin-bottom: var(--space-4);
  }

  @media (min-width: 768px) {
    .page-title {
      font-size: var(--font-size-5xl);
    }
  }

  .page-subtitle {
    font-size: var(--font-size-lg);
    color: var(--color-primary-100);
    line-height: var(--line-height-relaxed);
    margin: 0;
  }

  .news-grid {
    display: grid;
    gap: var(--space-6);
  }

  @media (min-width: 768px) {
    .news-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .news-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .news-category {
    display: inline-block;
    margin-bottom: var(--space-3);
    padding: var(--space-1) var(--space-3);
    border-radius: var(--radius-full);
    background-color: var(--color-primary-100);
    color: var(--color-primary-700);
    font-size: var(--font-size-xs);
    font-weight: var(--font-weight-medium);
    text-transform: uppercase;
    letter-spacing: var(--letter-spacing-wide);
  }

  .news-card .card-title a {
    color: inherit;
    text-decoration: none;
  }

  .news-card .card-title a:hover {
    color: var(--color-primary-700);
  }

  .news-image {
    aspect-ratio: 16 / 9;
    overflow: hidden;
  }

  .news-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .news-meta {
    margin-top: var(--space-4);
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
  }

  .news-source {
    color: var(--color-primary-700);
    text-decoration: none;
    font-weight: var(--font-weight-semibold);
  }

  .news-source:hover {
    text-decoration: underline;
  }
</style>
