---
import BaseLayout from '@/layouts/BaseLayout.astro';
---

<BaseLayout title="Investor Relations">
  <section class="page-hero">
    <div class="container">
      <div class="page-hero-content">
        <p class="page-eyebrow">Investor Relations</p>
        <h1 class="page-title">Investor Relations</h1>
        <p class="page-subtitle">
          Pakistan's First Shariah-Compliant Green Energy Fund  – Transparent Reporting, Sustainable Returns
        </p>
      </div>
    </div>
  </section>

  <section class="section shareholding">
    <div class="container">
      <div class="section-header">
        <h2 class="section-title">Pattern of Shareholding</h2>
        <p class="section-subtitle">
          Capital structure and shareholding pattern for accredited investors.
        </p>
      </div>

      <div class="table-wrapper">
        <table class="data-table">
          <thead>
            <tr>
              <th>S. No</th>
              <th>Accredited Investors</th>
              <th>Capital Structure</th>
              <th>Shareholding Pattern</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>1</td>
              <td>Burj Investment Management Limited</td>
              <td>12.90%</td>
              <td>11.60%</td>
            </tr>
            <tr>
              <td>2</td>
              <td>Burj Energy International Management Limited</td>
              <td>75.00%</td>
              <td>67.50%</td>
            </tr>
            <tr>
              <td>3</td>
              <td>Habib Bank Limited</td>
              <td>5.44%</td>
              <td>4.90%</td>
            </tr>
            <tr>
              <td>4</td>
              <td>Meezan Bank Limited</td>
              <td>5.44%</td>
              <td>4.90%</td>
            </tr>
            <tr>
              <td>5</td>
              <td>Arif Habib Limited</td>
              <td>1.22%</td>
              <td>1.10%</td>
            </tr>
            <tr>
              <td colspan="2">Existing Share Capital</td>
              <td>100.00%</td>
              <td>90.00%</td>
            </tr>
            <tr>
              <td>6</td>
              <td>Initial Offering Portion</td>
              <td>–</td>
              <td>10.00%</td>
            </tr>
            <tr>
              <td colspan="2">Total Share Capital Post Initial Offering</td>
              <td>–</td>
              <td>100.00%</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </section>

  <section class="section reports bg-alt">
    <div class="container">
      <div class="section-header">
        <h2 class="section-title">Financial Reports</h2>
        <p class="section-subtitle">
          Download quarterly and annual financial statements.
        </p>
      </div>

      <div class="report-list">
        <article class="report-card report-card--media">
          <div class="report-image">
            <img
              src="/images/Investment-relations/First%20Quaterly%20Report%20Report%202025.png"
              alt="First Quarterly Report 2025"
              loading="lazy"
            />
          </div>
          <div class="report-content">
            <h3 class="report-title">First Quarterly Report 2025</h3>
            <p class="report-text">
              Quarterly Un-consolidated & Consolidated Interim Financial Statements for the
              three month period ended September 30, 2025.
            </p>
            <a
              class="btn btn-outline btn-sm"
              href="/downloads/Quarterly-Report-2025.pdf"
              aria-label="Download First Quarterly Report 2025"
            >
              Click Here
            </a>
          </div>
        </article>
        <article class="report-card">
          <div class="report-image">
            <img
              src="/images/Investment-relations/Annual%20Report%202025.png"
              alt="Annual Report 2025"
              loading="lazy"
            />
          </div>
          <div class="report-content">
            <h3 class="report-title">Annual Report 2025</h3>
            <p class="report-text">
              Annual audited financial statements for the year ended June 30, 2025.
            </p>
            <a
              class="btn btn-outline btn-sm"
              href="/downloads/Annual-Report-2025-WEB.pdf"
              aria-label="Download Annual Report 2025"
            >
              Click Here
            </a>
          </div>
        </article>
        <article class="report-card">
          <div class="report-image">
            <img
              src="/images/Investment-relations/Third%20Quarterly%20Financial%20Report%202025.jpg"
              alt="Third Quarterly Financial Report 2025"
              loading="lazy"
            />
          </div>
          <div class="report-content">
            <h3 class="report-title">Third Quarterly Financial Report 2025</h3>
            <p class="report-text">
              Interim financial statements for the period ended March 31, 2025.
            </p>
            <a
              class="btn btn-outline btn-sm"
              href="/downloads/BCEM-3rd-Quater-Financial-Statements-31-MAR-2025.pdf"
              aria-label="Download Third Quarterly Report 2025"
            >
              Click Here
            </a>
          </div>
        </article>
        <article class="report-card">
          <div class="report-image">
            <img
              src="/images/Investment-relations/Half%20Yearly%20Financial%20Report%202024.jpg"
              alt="Half Yearly Financial Report 2024"
              loading="lazy"
            />
          </div>
          <div class="report-content">
            <h3 class="report-title">Half Yearly Financial Report 2024</h3>
            <p class="report-text">
              Interim financial statements for the period ended December 31, 2024.
            </p>
            <a
              class="btn btn-outline btn-sm"
              href="/downloads/Burj-Half-Yearly-Report-Final.pdf"
              aria-label="Download Half Yearly Financial Report 2024"
            >
              Click Here
            </a>
          </div>
        </article>
      </div>
    </div>
  </section>

  <section class="section notices">
    <div class="container">
      <div class="section-header">
        <h2 class="section-title">Notices and Announcements</h2>
        <p class="section-subtitle">
          Corporate briefings and disclosures.
        </p>
      </div>

      <div class="notice-list">
        <article class="notice-card">
          <div class="notice-icon" aria-hidden="true">
            <img src="/images/pdf-svgrepo-com.svg" alt="" loading="lazy" />
          </div>
          <div class="notice-content">
            <h3 class="notice-title">Corporate Briefing Session 2025</h3>
            <a
              class="btn btn-outline btn-sm"
              href="/downloads/Corporate-Briefing-Session-2025.pdf"
              aria-label="Download Corporate Briefing Session 2025"
            >
              Download
            </a>
          </div>
        </article>
        <article class="notice-card">
          <div class="notice-icon" aria-hidden="true">
            <img src="/images/pdf-svgrepo-com.svg" alt="" loading="lazy" />
          </div>
          <div class="notice-content">
            <h3 class="notice-title">Half Yearly Progress Report on Utilization of IPO Proceed - As on October 10, 2025</h3>
            <p class="notice-text">
              Detailed update on the utilization of IPO proceeds as of October 10, 2025.
            </p>
            <a
              class="btn btn-outline btn-sm"
              href="/downloads/Progress-Report-As-On-October-10-2025.pdf"
              aria-label="Download IPO utilization report October 2025"
            >
              Download
            </a>
          </div>
        </article>
        <article class="notice-card">
          <div class="notice-icon" aria-hidden="true">
            <img src="/images/pdf-svgrepo-com.svg" alt="" loading="lazy" />
          </div>
          <div class="notice-content">
            <h3 class="notice-title">Half Yearly Progress Report on Utilization of IPO Proceed - As on April 10, 2025</h3>
            <p class="notice-text">
              Detailed update on the utilization of IPO proceeds as of April 10, 2025.
            </p>
            <a
              class="btn btn-outline btn-sm"
              href="/downloads/HALF-YEARLY-PROGRESS-REPORT-ON-UTILIZATION-OF-IO-PROCEED.pdf"
              aria-label="Download IPO utilization report April 2025"
            >
              Download
            </a>
          </div>
        </article>
        <article class="notice-card">
          <div class="notice-icon" aria-hidden="true">
            <img src="/images/pdf-svgrepo-com.svg" alt="" loading="lazy" />
          </div>
          <div class="notice-content">
            <h3 class="notice-title">Electronic Transmission Consent Form</h3>
            <a
              class="btn btn-outline btn-sm"
              href="/downloads/Electronic-Transmission-Consent-Form-Burj1.pdf"
              aria-label="Download Electronic Transmission Consent Form"
            >
              Download
            </a>
          </div>
        </article>
        <article class="notice-card">
          <div class="notice-icon" aria-hidden="true">
            <img src="/images/pdf-svgrepo-com.svg" alt="" loading="lazy" />
          </div>
          <div class="notice-content">
            <h3 class="notice-title">Dividend Transmission Consent Form</h3>
            <a
              class="btn btn-outline btn-sm"
              href="/downloads/Dividend-Mandate-Form-_-Burj.pdf"
              aria-label="Download Dividend Transmission Consent Form"
            >
              Download
            </a>
          </div>
        </article>
      </div>
    </div>
  </section>

  <section class="section gender-pay-gap bg-alt">
    <div class="container">
      <div class="section-header">
        <h2 class="section-title">Gender Pay Gap</h2>
        <p class="section-subtitle">
          Transparency in compensation practices.
        </p>
      </div>
      <div class="card">
        <div class="card-body">
          <div class="notice-icon" aria-hidden="true">
            <img src="/images/pdf-svgrepo-com.svg" alt="" loading="lazy" />
          </div>
          <div class="notice-content">
            <h3 class="card-title">Gender Pay Gap</h3>
            <a
              class="btn btn-outline btn-sm"
              href="/downloads/BCEM_Gender_pay_2025.pdf"
              aria-label="Read gender pay gap report"
            >
              Read more
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .page-hero {
    background: linear-gradient(135deg, var(--color-primary-900) 0%, var(--color-primary-700) 100%);
    color: var(--color-text-inverse);
    padding-block: var(--space-20);
  }

  .page-hero-content {
    max-width: var(--container-3xl);
  }

  .page-eyebrow {
    text-transform: uppercase;
    letter-spacing: var(--letter-spacing-wide);
    font-size: var(--font-size-xs);
    color: var(--color-primary-200);
    margin-bottom: var(--space-3);
  }

  .page-title {
    font-size: var(--font-size-4xl);
    line-height: var(--line-height-tight);
    margin-bottom: var(--space-4);
  }

  @media (min-width: 768px) {
    .page-title {
      font-size: var(--font-size-5xl);
    }
  }

  .page-subtitle {
    font-size: var(--font-size-lg);
    color: var(--color-primary-100);
    line-height: var(--line-height-relaxed);
    margin: 0;
  }

  .table-wrapper {
    overflow-x: auto;
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    background: var(--color-surface);
  }

  .data-table {
    width: 100%;
    border-collapse: collapse;
    min-width: 680px;
  }

  .data-table th,
  .data-table td {
    padding: var(--space-4);
    text-align: left;
    border-bottom: 1px solid var(--color-border-light);
  }

  .data-table th {
    background: var(--color-background-alt);
    font-size: var(--font-size-sm);
    text-transform: uppercase;
    letter-spacing: var(--letter-spacing-wide);
  }

  .report-list,
  .notice-list {
    display: grid;
    gap: var(--space-6);
  }

  @media (min-width: 768px) {
    .notice-list {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .report-card,
  .notice-card {
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: var(--space-6);
    background: var(--color-surface);
  }

  .report-card--media,
  .report-card {
    display: grid;
    gap: var(--space-5);
  }

  @media (min-width: 768px) {
    .report-card--media,
    .report-card {
      grid-template-columns: 1fr 1fr;
      align-items: center;
    }
  }

  .notice-card,
  .gender-pay-gap .card-body {
    display: grid;
    gap: var(--space-4);
  }

  @media (min-width: 768px) {
    .notice-card,
    .gender-pay-gap .card-body {
      grid-template-columns: 1fr 3fr;
      align-items: center;
    }
  }

  .notice-content {
    display: grid;
    gap: var(--space-3);
  }

  .report-content {
    display: grid;
    gap: var(--space-3);
  }

  .report-content .btn,
  .notice-content .btn {
    align-self: flex-start;
    font-size: 0.75rem;
    line-height: 1.1;
    padding: 6px 12px;
    width: 30%;
    min-width: 140px;
    justify-content: center;
  }

  .report-title,
  .notice-title {
    font-size: var(--font-size-lg);
    margin-bottom: var(--space-2);
  }

  .report-text,
  .notice-text {
    color: var(--color-text-secondary);
  }

  .report-image {
    border-radius: var(--radius-lg);
    overflow: hidden;
    margin-bottom: var(--space-4);
  }

  .report-image img {
    width: 100%;
    height: 180px;
    object-fit: cover;
    display: block;
  }

  .notice-icon {
    display: flex;
    align-items: center;
    justify-content: flex-end;
    height: 100%;
    margin-bottom: var(--space-4);
  }

  @media (min-width: 768px) {
    .notice-icon {
      margin-bottom: 0;
      justify-self: end;
    }
  }

  .notice-icon img {
    height: 48px;
    width: auto;
    object-fit: contain;
  }
</style>
