---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const placeholderPhoto =
  "data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' width='400' height='400'><rect width='100%25' height='100%25' fill='%23e5eef8'/><circle cx='200' cy='160' r='80' fill='%23c1d3ea'/><rect x='80' y='240' width='240' height='120' rx='60' fill='%23c1d3ea'/></svg>";

export async function getStaticPaths() {
  const teamMembers = await getCollection('team');
  const managementTeam = teamMembers.filter((member) => member.data.groups.includes('management'));
  return managementTeam.map((member) => ({ params: { slug: member.slug }, props: { member } }));
}

const { member } = Astro.props;
---

<BaseLayout title={`${member.data.name} | Management Team`}>
  <section class="profile-hero">
    <div class="container profile-hero-grid">
      <div class="profile-photo-wrap">
        <img
          class="profile-photo"
          src={member.data.image ?? placeholderPhoto}
          alt={member.data.name}
          loading="lazy"
        />
      </div>
      <div class="profile-hero-content">
        <a class="back-link" href="/governance">Back to Governance</a>
        <p class="profile-eyebrow">Management Team</p>
        <h1 class="profile-name">{member.data.name}</h1>
        <p class="profile-role">{member.data.role}</p>
        <p class="profile-summary">{member.data.bio}</p>
        {member.data.linkedinUrl ? (
          <div class="profile-links">
            <a class="profile-link" href={member.data.linkedinUrl} target="_blank" rel="noreferrer">
              <img class="linkedin-icon" src="/images/linkedin.svg" alt="LinkedIn" loading="lazy" />
            </a>
          </div>
        ) : null}
      </div>
    </div>
  </section>

</BaseLayout>

<style>
  .profile-hero {
    padding-block: var(--space-16);
    background: var(--color-surface-alt, #f6f8fb);
  }

  .profile-hero-grid {
    display: grid;
    gap: var(--space-8);
    align-items: center;
  }

  @media (min-width: 900px) {
    .profile-hero-grid {
      grid-template-columns: 320px 1fr;
    }
  }

  .profile-photo-wrap {
    display: flex;
    justify-content: center;
  }

  .profile-photo {
    width: 100%;
    max-width: 320px;
    aspect-ratio: 1 / 1;
    border-radius: var(--radius-xl);
    object-fit: cover;
    background: var(--color-primary-100);
  }

  .back-link {
    display: inline-block;
    font-size: var(--font-size-sm);
    color: var(--color-primary-600);
    margin-bottom: var(--space-3);
    text-decoration: none;
  }

  .profile-eyebrow {
    font-size: var(--font-size-xs);
    text-transform: uppercase;
    letter-spacing: var(--letter-spacing-wide);
    color: var(--color-text-muted);
    margin-bottom: var(--space-2);
  }

  .profile-name {
    font-size: var(--font-size-4xl);
    margin-bottom: var(--space-3);
  }

  .profile-role {
    font-size: var(--font-size-lg);
    color: var(--color-primary-600);
    margin-bottom: var(--space-4);
  }

  .profile-summary {
    color: var(--color-text-secondary);
    max-width: var(--container-2xl);
  }

  .profile-links {
    margin-top: var(--space-4);
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-3);
  }

  .profile-link {
    font-size: var(--font-size-sm);
    color: var(--color-primary-600);
    text-decoration: none;
    display: inline-flex;
    align-items: center;
  }

  .linkedin-icon {
    width: 22px;
    height: 22px;
    display: inline-block;
  }

</style>
