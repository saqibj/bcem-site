---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { boardMembers } from '@/data/governanceProfiles';

const placeholderPhoto =
  "data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' width='400' height='400'><rect width='100%25' height='100%25' fill='%23e5eef8'/><circle cx='200' cy='160' r='80' fill='%23c1d3ea'/><rect x='80' y='240' width='240' height='120' rx='60' fill='%23c1d3ea'/></svg>";

export async function getStaticPaths() {
  return boardMembers.map((member) => ({
    params: { slug: member.slug },
    props: { member },
  }));
}

const { member } = Astro.props;
---

<BaseLayout title={`${member.name} | Board of Directors`}>
  <section class="profile-hero">
    <div class="container profile-hero-grid">
      <div class="profile-photo-wrap">
        <img class="profile-photo" src={placeholderPhoto} alt={member.name} loading="lazy" />
      </div>
      <div class="profile-hero-content">
        <a class="back-link" href="/governance">Back to Governance</a>
        <p class="profile-eyebrow">Board of Directors</p>
        <h1 class="profile-name">{member.name}</h1>
        <p class="profile-role">{member.role}</p>
        <p class="profile-summary">{member.summary}</p>
      </div>
    </div>
  </section>

  <section class="section profile-details">
    <div class="container">
      <h2 class="section-title">Focus Areas</h2>
      <ul class="focus-list">
        {member.focus.map((item) => (
          <li>{item}</li>
        ))}
      </ul>
    </div>
  </section>
</BaseLayout>

<style>
  .profile-hero {
    padding-block: var(--space-16);
    background: var(--color-surface-alt, #f6f8fb);
  }

  .profile-hero-grid {
    display: grid;
    gap: var(--space-8);
    align-items: center;
  }

  @media (min-width: 900px) {
    .profile-hero-grid {
      grid-template-columns: 320px 1fr;
    }
  }

  .profile-photo-wrap {
    display: flex;
    justify-content: center;
  }

  .profile-photo {
    width: 100%;
    max-width: 320px;
    aspect-ratio: 1 / 1;
    border-radius: var(--radius-xl);
    object-fit: cover;
    background: var(--color-primary-100);
  }

  .back-link {
    display: inline-block;
    font-size: var(--font-size-sm);
    color: var(--color-primary-600);
    margin-bottom: var(--space-3);
    text-decoration: none;
  }

  .profile-eyebrow {
    font-size: var(--font-size-xs);
    text-transform: uppercase;
    letter-spacing: var(--letter-spacing-wide);
    color: var(--color-text-muted);
    margin-bottom: var(--space-2);
  }

  .profile-name {
    font-size: var(--font-size-4xl);
    margin-bottom: var(--space-3);
  }

  .profile-role {
    font-size: var(--font-size-lg);
    color: var(--color-primary-600);
    margin-bottom: var(--space-4);
  }

  .profile-summary {
    color: var(--color-text-secondary);
    max-width: var(--container-2xl);
  }

  .focus-list {
    list-style: none;
    padding: 0;
    margin: var(--space-6) 0 0;
    display: grid;
    gap: var(--space-3);
  }

  .focus-list li {
    padding: var(--space-3) var(--space-4);
    border-radius: var(--radius-lg);
    background: var(--color-surface);
    border: 1px solid var(--color-border);
  }
</style>
